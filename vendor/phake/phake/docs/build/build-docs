CURDIR=`pwd`
(cd ../html; java -cp ${CURDIR}/saxon.jar:${CURDIR}/xercesImpl.jar:${CURDIR}/xslthl-2.0.2.jar -Dxslthl.config=file://${CURDIR}/highlighters/xslthl-config.xml -Djava.xml.parsers.DocumentBuilderFactory=org.apache.xerces.jaxp.DocumentBuilderFactoryImpl -Djavax.xml.parsers.SAXParserFactory=org.apache.xerces.jaxp.SAXParserFactoryImpl -Dorg.apache.xerces.xni.parser.XMLParserConfiguration=org.apache.xerces.parsers.XIncludeParserConfiguration com.icl.saxon.StyleSheet -o ../html/.hide ../docbook/book.xml ../build/chunk.xsl)
java -cp saxon.jar:xercesImpl.jar:xslthl-2.0.2.jar -Dxslthl.config=file://${CURDIR}/highlighters/xslthl-config.xml -Djava.xml.parsers.DocumentBuilderFactory=org.apache.xerces.jaxp.DocumentBuilderFactoryImpl -Djavax.xml.parsers.SAXParserFactory=org.apache.xerces.jaxp.SAXParserFactoryImpl -Dorg.apache.xerces.xni.parser.XMLParserConfiguration=org.apache.xerces.parsers.XIncludeParserConfiguration com.icl.saxon.StyleSheet -o ../html-single/index.html ../docbook/book.xml html.xsl
java -cp saxon.jar:xercesImpl.jar:xslthl-2.0.2.jar -Dxslthl.config=file://${CURDIR}/highlighters/xslthl-config.xml -Djava.xml.parsers.DocumentBuilderFactory=org.apache.xerces.jaxp.DocumentBuilderFactoryImpl -Djavax.xml.parsers.SAXParserFactory=org.apache.xerces.jaxp.SAXParserFactoryImpl -Dorg.apache.xerces.xni.parser.XMLParserConfiguration=org.apache.xerces.parsers.XIncludeParserConfiguration com.icl.saxon.StyleSheet -o ../pdf/intermediate.fo ../docbook/book.xml fo.xsl
fop -pdf ../pdf/phake.pdf -fo ../pdf/intermediate.fo
rm ../pdf/intermediate.fo
